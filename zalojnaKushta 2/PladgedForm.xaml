        <TextBox Name="PriceTextBox" Margin="155,45,10,205.8" MaxLines="1"></TextBox>
        <Label Content="Лихва:" Margin="10,80,150,165.8"></Label>
        <TextBox Name="IncreaseTextBox" Margin="155,80,10,170.8" MaxLines="1"></TextBox>
        <Label Content="Вещ:" Margin="10,115,150,130.8"></Label>
        <TextBox Name="ItemDescTextBox" Margin="155,115,10,135.8" MaxLines="1"></TextBox>
        <Label Content="Име на Клиента:" Margin="10,150,150,95.8"></Label>
        <TextBox Name="ClientNameTextBox" Margin="155,150,10,100.8" MaxLines="1" ></TextBox>
        <Label Content="Период:" Margin="10,190,150,55.8"></Label>
        <TextBox Name="PeriodTextBox" Margin="155,190,10,60.8" MaxLines="1" ></TextBox>
        <Button Name="CreatePladgedButton" Content="Готово" Margin="10,233,10,9.8" Click="CreatePladgedButton_Click"></Button>
    </Grid>
</Window>
